  "Generator": {
    "volume": 2000,
    "chunk_size": 100,
    "red_zone": 15,
    "green_zone": 60,
    "blue_zone": 25,

    "generation":{
      "random_seed": 0,
      "identifier_bit_depth": 20,
      "currency_pairs": [
        "EUR/USD",
        "USD/RUB",
        "EUR/RUB",
        "GBP/USD",
        "AUD/USD",
        "USD/JPY",
        "NZD/USD",
        "USD/CAD"
      ],
      "descriptions": [
        "Lorem ipsum dolor sit amet.",
        "Suspendisse sagittis dolor nibh non.",
        "Fusce metus nibh tincidunt a.",
        "Nunc tempus risus at ante.",
        "Sed mattis mattis libero ac.",
        "Maecenas bibendum mollis quam sed.",
        "Morbi lobortis libero tellus vel.",
        "Pellentesque elit nunc consectetur ac.",
        "Proin scelerisque posuere mauris non.",
        "Aliquam a enim mauris. Proin."
