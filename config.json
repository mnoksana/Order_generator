  "Logger": {
    "version": 1,
    "handlers": {
      "fileHandler": {
        "class": "logging.FileHandler",
        "formatter": "fileFormatter",
        "filename": "log.log"
      },
      "consoleHandler": {
        "class": "logging.StreamHandler",
        "formatter": "consoleFormatter",
        "level": "INFO"
      }
    },
    "loggers": {
      "program": {
        "handlers": [
          "consoleHandler"
        ],
        "level": "INFO"
      }
    },
    "formatters": {
      "consoleFormatter": {
        "format": "\u001B[94m%(message)s"
      },
      "fileFormatter": {
        "format": "%(asctime)s - [%(name)s - %(levelname)s] - %(message)s"
      }
    }
  }
}